        <div class="wrapper">
            <div class="row create-board-btn">
                <button class="btn btn-lg btn-info" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-open-file"></i> CREATE NEW BOARD</button>
            </div>

            <div>

                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#created" aria-controls="home" role="tab" data-toggle="tab">Your Boards</a></li>
                    <li role="presentation"><a href="#shared" aria-controls="profile" role="tab" data-toggle="tab">Shared Boards</a></li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="created">
                        <div class="row board-list">
                            {{#each whiteboardlist}}
                            <div class="col-md-3 col-sm-4 col-xs-6">
                                <div class="thumbnail">
                                    <img src="/img/board-ava.svg" alt="...">
                                    <div class="caption">
                                        <h3>{{this.title}}</h3>
                                        <p>{{this.description}}</p>
                                        <p>
                                            <a href="/board/{{this._id}}" class="btn btn-primary" role="button">Open</a>
                                            
                                        </p>

                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="shared">Profile</div>
                </div>

            </div>

        </div>
