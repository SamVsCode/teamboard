{
  "name": "teamboard",
  "version": "1.0.0",
  "description": "The simplest visual collaboration platform for agile product teams, ux/ui designers, project leaders, marketers and creatives.",
  "main": "app.js",
  "scripts": {
    "build:css": "node-sass --output-style compressed public/src/scss/app.scss public/dist/css/app.bundle.css",
    "webpack": "webpack --config webpack.config.js",
    "watch:sass": "npm run build:css &&  node-sass --output-style compressed public/src/scss/app.scss public/dist/css/app.bundle.css -w",
    "nodemon": " nodemon --ignore 'public/**/*.*'",
    "start": "npm run watch:sass",
    "dev": "concurrently --kill-others \" npm run watch:sass\"  \" npm run webpack\" \" npm run nodemon\" "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamVsCode/teamboard.git"
  },
  "author": "samvscode@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SamVsCode/teamboard/issues"
  },
  "homepage": "https://github.com/SamVsCode/teamboard#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.1",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^1.3.2",
    "connect-redis": "^3.2.0",
    "cookie-parser": "^1.4.3",
    "expose-loader": "^0.7.3",
    "express": "^4.15.2",
    "express-handlebars": "^3.0.0",
    "express-messages": "^1.0.1",
    "express-session": "^1.15.2",
    "express-validator": "^3.1.3",
    "jquery": "^3.2.1",
    "mongoose": "^4.9.5",
    "passport": "^0.3.2",
    "passport-http": "^0.3.0",
    "passport-local": "^1.0.0",
    "passport.socketio": "^3.7.0",
    "socket.io": "^1.7.3",
    "webpack": "^2.4.1"
  },
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "browser-sync-webpack-plugin": "^1.1.4",
    "concurrently": "^3.4.0",
    "imports-loader": "^0.7.1",
    "node-sass": "^4.5.2",
    "webpack-dev-server": "^2.4.2"
  }
}
